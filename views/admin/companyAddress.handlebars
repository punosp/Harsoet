
    <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
       <!-- Content Header (Page header) -->
       <section class="content-header">
         {{#if message}}
                       <div class="alert alert-success" role="alert">
                         {{#each message}}

                             <p>{{this}}</p>

                         {{/each}}
                       </div>
                   {{/if}}

                   {{#if errors}}
                       <div class="alert alert-danger" role="alert">
                         {{#each errors}}

                             <p>{{this}}</p>

                         {{/each}}
                       </div>
                   {{/if}}
                   {{#if alert}}
                       <div class="alert alert-info" role="alert">
                         {{#each alert}}

                           <p>{{this}}</p>

                         {{/each}}
                       </div>
                   {{/if}}
         <h1>
           Addresses
           &nbsp;&nbsp;<a href="/admin/companyAddressAdd" class="btn btn-primary btn-md"> Add </a>
         </h1>

       </section>

       <!-- Main content -->
       <section class="content">
         {{#each address}}
         <div class="row">

           <div class="col-md-3"></div>
           <div class="col-md-6">
               <!-- /.box-header -->
               <!-- form start -->

               <div class="box box-primary collapsed-box">
                 <div class="box-header">

                   <h3 class="box-title">Address {{counter @index}}
                   </h3>
                   <!-- tools box -->
                   <div class="pull-right box-tools">
                     <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                       <i class="fa fa-plus"></i></button>

                   </div>
                   <br>
                   <br>
                   <div><b>Type</b> &nbsp;&nbsp;&nbsp;{{#ifCond this.status 1}}Primary{{else}}Secondary{{/ifCond}}
                     <a href="/admin/address/{{this.id}}/edit" class="btn btn-warning pull-right"> Edit </a>
                     <a href="/admin/address/{{this.id}}/delete" class="btn btn-danger pull-right" style="margin-right: 10px"> Delete </a>
                   </div>

                   <!-- /. tools -->
                 </div>
                 <!-- /.box-header -->
                 <div class="box-body pad">
                   <table class='table table-striped'>
                     <tr>

                       <th>Address</th>
                       <td>{{this.address}}</td>

                     </tr>
                     <tr>

                       <th>Pin Code</th>
                       <td>{{this.pin}}</td>

                     </tr>
                     <tr>

                       <th>City</th>
                       <td>{{this.city}}</td>

                     </tr>
                     <tr>

                       <th>State</th>
                       <td>{{this.state}}</td>

                     </tr>
                     <tr>

                       <th>Country</th>
                       <td>{{this.country}}</td>

                     </tr>
                     <tr>

                       <th>Phone</th>
                       <td>{{this.phone}}</td>

                     </tr>
                     <tr>

                       <th>Email</th>
                       <td>{{this.email}}</td>

                     </tr>
                     <tr>

                       <th>From</th>
                       <td>{{this.from}}</td>

                     </tr>
                     <tr>

                       <th>To</th>
                       <td>{{this.to}}</td>

                     </tr>


                   </table>
                 </div>
               </div>


             </div>

           <!-- /.col-->

         <div class="col-md-3"></div>
         <!-- ./row -->

       </div>
{{/each}}
       </section>
       <!-- /.content -->
</div>
     <!-- /.content-wrapper -->
