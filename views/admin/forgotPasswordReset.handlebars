<div class="login-box">
  <div class="login-logo">
    <b>Reset Password</b>
  </div>
  {{#if message}}
                <div class="alert alert-success" role="alert">
                  {{#each message}}

                      <p>{{this}}</p>

                  {{/each}}
                </div>
            {{/if}}

            {{#if errors}}
                <div class="alert alert-danger" role="alert">
                  {{#each errors}}

                      <p>{{this}}</p>

                  {{/each}}
                </div>
            {{/if}}
            {{#if alert}}
                <div class="alert alert-info" role="alert">
                  {{#each alert}}

                    <p>{{this}}</p>

                  {{/each}}
                </div>
            {{/if}}

  <!-- /.login-logo -->
  <div class="login-box-body">

    <form action="/admin/{{ user.email }}/resetPassword/{{ user.uniqueKey }}"
                      method="POST" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="newPassword">New password</label>
                        <input class="form-control" placeholder="e.g. myStrongPassword" type="password" requried
                               name="newPassword" id="newPassword">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm password</label>
                        <input class="form-control" placeholder="Confirm Password" type="password" requried
                               name="confirmPassword" id="confirmPassword">
                    </div>


                    <input type="hidden" name="uniqueKey" value="{{ user.uniqueKey }}">
                    <input type="hidden" name="email" value="{{ user.email }}">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">SUBMIT</button>
                    <input type="hidden" name="_csrf" value="{{ _csrf }}"/>


                </form>


    <!-- /.social-auth-links -->

    <a href="#">I forgot my password</a>

  </div>
  <!-- /.login-box-body -->
</div>
